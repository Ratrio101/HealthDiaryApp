<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthDiaryApp.MainPage">

    <StackLayout Padding="10">

        <Button Text="Добавить"
                Clicked="Add_Clicked"/>
        <CollectionView ItemsSource="{Binding Entries}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5">
                        <StackLayout>

                            <Label Text="Дата:" FontAttributes="Bold"/>
                            <Label Text="{Binding Date}" />

                            <Label Text="Шаги:" FontAttributes="Bold"/>
                            <Label Text="{Binding Steps}" />

                            <Label Text="Вес:" FontAttributes="Bold"/>
                            <Label Text="{Binding Weight}" />

                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>

</ContentPage>